{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", ".open-next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false
    },
    "test:run": {
      "cache": false
    },
    "preview": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "deploy:prod": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "deploy:preview": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "deploy:stage": {
      "dependsOn": ["^build"],
      "cache": false
    },

    "build:opennext": {
      "dependsOn": ["^build"],
      "outputs": [".open-next/**"]
    }
  }
}
